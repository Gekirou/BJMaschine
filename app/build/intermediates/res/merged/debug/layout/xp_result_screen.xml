<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grund XP: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
        <TextView
            android:id="@+id/baseExperience"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
    </LinearLayout>


    <ListView
        android:id="@+id/xpMultiplicatorList"
        android:layout_width="match_parent"
        android:layout_height="300dp"></ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"></View>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finaler Multiplikator: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
        <TextView
            android:id="@+id/finalMultiplicator"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5,4"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finale XP: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
        <TextView
            android:id="@+id/finalXp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
    </LinearLayout>

</LinearLayout>