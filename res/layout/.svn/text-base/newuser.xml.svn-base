<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  
<TextView
 android:layout_marginTop="15px"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:gravity="center_horizontal"
 android:text="Neuer Nutzer"
 android:id="@+id/nu_title"
 style="@android:style/TextAppearance.Large"></TextView>
 
<TextView
 android:layout_marginTop="15px"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="Name"
 style="@android:style/TextAppearance.Large"></TextView>
<EditText
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:id="@+id/name"></EditText>
 <TextView
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:layout_marginTop="15px"
 android:text="Verbindung"
 style="@android:style/TextAppearance.Large"></TextView>
 
 <Spinner
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:prompt="@string/verbindungen_prompt" 
 android:id="@+id/verbindung_spinner"></Spinner>
 
 <TextView
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:layout_marginTop="15px"
 android:text="Avatar"
 style="@android:style/TextAppearance.Large"></TextView>
 
 <LinearLayout
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
 >
 <ImageView 
 android:layout_width="120px"
 android:layout_height="120px"
 android:src="@drawable/spongebob"
 android:id="@+id/nu_avatar"></ImageView>
 <Button
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="AuswÃ¤hlen..."
 android:layout_marginLeft="10px"
 android:layout_gravity="center_vertical"
 android:id="@+id/avatarselectbtn">
 </Button>
 </LinearLayout>
 
 <LinearLayout
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:orientation="vertical"
 android:layout_gravity="bottom">
 
 <Button
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:layout_marginTop="20px"
 android:text="Speichern"
 android:id="@+id/saveNewUser">
 </Button>
 
 
 
 </LinearLayout>
 
</LinearLayout>
