<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:id="@+id/modelinlay"
  >

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@drawable/black"
>

<!-- Useransicht 1-->
<LinearLayout 
android:layout_margin="1px"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginBottom="3px"
android:background="@drawable/white"
android:layout_width="0px"
android:layout_weight="1"
 android:id="@+id/Usr1">

<ImageView 
android:layout_gravity="center_horizontal"
android:src="@drawable/anonym" android:id="@+id/user1img" android:layout_height="120px" android:layout_width="120px"></ImageView>
<TextView
style="@android:style/TextAppearance.Large"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:gravity="center_horizontal"
android:id="@+id/user1name"
android:layout_gravity="center_horizontal"></TextView>
<LinearLayout 
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_width="fill_parent">
<TextView
style="@android:style/TextAppearance.Large"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:gravity="left"
android:text="Level: "></TextView>
<TextView
style="@android:style/TextAppearance.Large"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:layout_marginRight="5dp"
android:gravity="right"
android:id="@+id/start_levelUsr1"></TextView>
 </LinearLayout>
</LinearLayout>

<!-- Useransicht 2-->
<LinearLayout
android:layout_margin="1px"
android:layout_marginBottom="3px"
android:layout_height="wrap_content"
android:layout_width="0px"
android:orientation="vertical"
android:background="@drawable/white"
android:layout_weight="1"
android:id="@+id/Usr2" >

<ImageView
android:layout_gravity="center_horizontal"
android:src="@drawable/anonym" android:id="@+id/user2img" android:layout_height="120px" android:layout_width="120px"></ImageView>
<TextView android:id="@+id/user2name" style="@android:style/TextAppearance.Large"  android:layout_width="wrap_content" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"></TextView>
<LinearLayout 
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_width="fill_parent">
<TextView
style="@android:style/TextAppearance.Large"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:gravity="center_horizontal"
android:text="Level: "
android:layout_gravity="center_horizontal"></TextView>
<TextView
style="@android:style/TextAppearance.Large"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginRight="5dp"
android:gravity="right"
android:text=""
android:id="@+id/start_levelUsr2"></TextView>
 </LinearLayout>
</LinearLayout>

</LinearLayout>
<LinearLayout
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:paddingTop="4dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
	
        
   		<kankan.wheel.widget.WheelView android:id="@+id/anzahl_wheel"
        android:layout_height="90dp"
        android:layout_width="80dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        />
        
  		 <kankan.wheel.widget.WheelView android:id="@+id/gemaess_wheel"
  		android:layout_marginLeft="5dp"
        android:layout_height="90dp"
        android:layout_width="80dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        />

	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:paddingTop="4dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		

    <kankan.wheel.widget.WheelView android:id="@+id/getraenk_wheel"
		android:layout_height="90dp"
		android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
		/>
	</LinearLayout>

<Button
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/startbtn"
android:layout_marginTop="20dp"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:text="Saufts!"></Button>

</LinearLayout>
