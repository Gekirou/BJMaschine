<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

   <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
		<ImageView  
		android:id="@+id/ud_avatar"
    	android:layout_width="120px" 
    	android:layout_height="120px" 
    	android:src="@drawable/anonym"
    	/>
    	<LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	>
			<TextView 
			android:id="@+id/ud_name"
			android:textSize="40dp"
			android:text="Geki"
    		android:layout_width="fill_parent" 
    		android:layout_height="0px" 
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
    		/>
    		<LinearLayout 
    	android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="0px"
    	android:layout_weight="1"
    	android:layout_gravity="center_horizontal"
    	>
    		<TextView 
			android:text="Level "
			style="@android:style/TextAppearance.Large"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		/>
    		<TextView 
			android:id="@+id/ud_level"
			android:text="5"
			style="@android:style/TextAppearance.Large"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		/>
    		</LinearLayout>
    	</LinearLayout>
	</LinearLayout> 
	<LinearLayout
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:orientation="horizontal">
    		<ProgressBar
    		style="?android:attr/progressBarStyleHorizontal"
    		android:id="@+id/ud_xpProgress"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent"
    		android:layout_marginRight="20dip"
    		android:layout_marginLeft="20dip">
    		</ProgressBar>
    </LinearLayout>
	<LinearLayout
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:orientation="horizontal">
    		<TextView 
			android:text="Verbindung:"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:gravity="left"
    		style="@android:style/TextAppearance.Large"
    		/>
    		<TextView 
			android:id="@+id/ud_verbindung"
			android:text="321"
			android:layout_marginRight="5px"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:gravity="right"
    		style="@android:style/TextAppearance.Large"
    		/>	
    </LinearLayout>
    <LinearLayout
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:orientation="horizontal">
    		<TextView 
			android:text="# Getrunken:"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:gravity="left"
    		style="@android:style/TextAppearance.Large"
    		/>
    		<TextView 
			android:id="@+id/ud_totalbj"
			android:text="3.763"
			android:layout_marginRight="5px"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:gravity="right"
    		style="@android:style/TextAppearance.Large"
    		/>	
    </LinearLayout>
        <LinearLayout
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:orientation="horizontal">
    		<TextView 
			android:text="Erfahrung:"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:gravity="left"
    		style="@android:style/TextAppearance.Large"
    		/>
    		<TextView 
			android:id="@+id/ud_xp"
			android:text="321"
			android:layout_marginRight="5px"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:gravity="right"
    		style="@android:style/TextAppearance.Large"
    		/>	
    </LinearLayout>
     <LinearLayout
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:orientation="horizontal">
    		<TextView 
			android:text="Zum Level:"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:gravity="left"
    		style="@android:style/TextAppearance.Large"
    		/>
    		<TextView 
			android:id="@+id/ud_xpToNextLevel"
			android:text="321"
			android:layout_marginRight="5px"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:gravity="right"
    		style="@android:style/TextAppearance.Large"
    		/>	
    </LinearLayout>
       <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Lieblingsgegner: "
    android:layout_marginTop="40dp"
    android:gravity="center_horizontal"
    />
 <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:visibility="gone"
    android:layout_gravity="bottom"
    android:id="@+id/ud_oplinlay"
    >
		<ImageView  
		android:id="@+id/ud_opavatar1"
    	android:layout_width="100px" 
    	android:layout_height="100px" 
    	android:src="@drawable/anonym"
    	/>
    	<LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_gravity="right"
    	android:paddingLeft="70dp"
    	>
			<TextView 
			android:id="@+id/ud_opname1"
			style="@android:style/TextAppearance.Large"
			android:text=""
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:gravity="right"
    		/>
    </LinearLayout>
	</LinearLayout> 
</LinearLayout>

